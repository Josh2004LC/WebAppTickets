@model IEnumerable<SistemaTickets.Models.Rol>

@{
    ViewData["Title"] = "Roles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Gestión de Roles</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>Nuevo Rol
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Descripción</th>
                <th>Fecha Creación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ro_identificador</td>
                        <td>@item.ro_decripcion</td>
                        <td>@item.ro_fecha_adicion.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-route-id="@item.ro_identificador" class="btn btn-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ro_identificador" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No se encontraron roles.</td>
                </tr>
            }
        </tbody>
    </table>
</div>