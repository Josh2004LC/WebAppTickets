@model SistemaTickets.Models.Tiquete

@{
    ViewData["Title"] = "Crear Tiquete";
}

<h2>Crear Tiquete</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="ti_asunto" class="form-label"></label>
                        <input asp-for="ti_asunto" class="form-control" />
                        <span asp-validation-for="ti_asunto" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ti_categoria" class="form-label"></label>
                        <select asp-for="ti_categoria" class="form-select" asp-items="ViewBag.Categorias"></select>
                        <span asp-validation-for="ti_categoria" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="ti_us_id_asigna" class="form-label"></label>
                            <select asp-for="ti_us_id_asigna" class="form-select" asp-items="ViewBag.Usuarios"></select>
                            <span asp-validation-for="ti_us_id_asigna" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="ti_urgencia" class="form-label"></label>
                            <select asp-for="ti_urgencia" class="form-select" asp-items="ViewBag.Urgencias"></select>
                            <span asp-validation-for="ti_urgencia" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="ti_importancia" class="form-label"></label>
                            <select asp-for="ti_importancia" class="form-select" asp-items="ViewBag.Importancias"></select>
                            <span asp-validation-for="ti_importancia" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ti_estado" class="form-label"></label>
                        <select asp-for="ti_estado" class="form-select" asp-items="ViewBag.Estados"></select>
                        <span asp-validation-for="ti_estado" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ti_solucion" class="form-label"></label>
                        <textarea asp-for="ti_solucion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="ti_solucion" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Volver</a>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}