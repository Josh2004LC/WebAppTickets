@model TicketsMVC.Models.Ticket
@{
    ViewData["Title"] = "Crear Ticket";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="ti_asunto" class="form-label"></label>
                        <input asp-for="ti_asunto" class="form-control" />
                        <span asp-validation-for="ti_asunto" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ti_categoria" class="form-label"></label>
                        <select asp-for="ti_categoria" class="form-select" asp-items="ViewBag.Categories">
                            <option value="">-- Seleccione una categoría --</option>
                        </select>
                        <span asp-validation-for="ti_categoria" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ti_urgencia" class="form-label"></label>
                        <select asp-for="ti_urgencia" class="form-select" asp-items="ViewBag.Urgencies">
                            <option value="">-- Seleccione una urgencia --</option>
                        </select>
                        <span asp-validation-for="ti_urgencia" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ti_importancia" class="form-label"></label>
                        <select asp-for="ti_importancia" class="form-select" asp-items="ViewBag.Importances">
                            <option value="">-- Seleccione una importancia --</option>
                        </select>
                        <span asp-validation-for="ti_importancia" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ti_us_id_asigna" class="form-label"></label>
                        <select asp-for="ti_us_id_asigna" class="form-select" asp-items="ViewBag.Analysts">
                            <option value="">-- Seleccione un analista --</option>
                        </select>
                        <span asp-validation-for="ti_us_id_asigna" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Información</h5>
            </div>
            <div class="card-body">
                <p>Complete todos los campos requeridos para crear un nuevo ticket.</p>
                <p>El estado inicial del ticket será "Pendiente".</p>
                <p>Una vez creado, podrá actualizar la información del ticket según sea necesario.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
